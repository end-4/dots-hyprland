

// Global
{

    // If height property would be not present, it'd be calculated dynamically
    "height": 10,

    "modules-left": [
        "wlr/workspaces",
        "custom/launcher",
        "cpu",
        "memory",
        "backlight#icon",
        "backlight#value",
        "disk",
        "mpd",
    ],

    "modules-center": [
        "sway/workspaces",
    ],

    "modules-right": [
        "network",
        "idle_inhibitor",
        "pulseaudio",
//        "custom/keyboard-layout",
        "battery",
        "clock",
        "tray",
        //"custom/weather",
        "custom/power",
    ],

    // Modules
    //Workspace scroll
    "wlr/workspaces": {
         "workspace-warparound":"false",
         "on-click": "activate",
         "format": "{icon}",
         "on-scroll-up": "hyprctl dispatch workspace e+1",
         "on-scroll-down": "hyprctl dispatch workspace e-1"
    },

    "layer": "top",
    "position": "top",
    "margin": "3, 0, 2, 0",

    "idle_inhibitor": {
        "format": "{icon} ",
        "format-icons":{
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15,
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "clock": {
        "interval": 1,
        "locale": "C", 
        "format": "{:%I:%M %p}",
        "format-alt": "ÔÅ≥ {:%a, %b %d}" // Icon: calendar-alt
    },

    "cpu": {
        "interval": 10,
        "format": "Ôãõ {usage}%",
        "max-length": 10,
        "on-click": "kitty -e 'htop'"
    },

    "custom/keyboard-layout": {
        "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
        // Interval set only as a fallback, as the value is updated by signal
        "interval": 30,
        "format": "ÔÑú  {}", // Icon: keyboard
        // Signal sent by Sway key binding (~/.config/sway/key-bindings)
        "signal": 1, // SIGHUP
        "tooltip": false,
        "on-click": "~/.config/waybar/scripts/keyhint.sh",
    },

    "memory": {
        "interval": 5,
        "format": "ÔÄπ {}%", // Icon: memory
        "on-click": "kitty -e 'htop'", 
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "disk": {
        "format": "ÔÇ† {free}" 
    },
        

    "network": {
        "interval": 5,
        "format-wifi": "Ôá´ ({signalStrength}%)", // Icon: wifi
        "format-ethernet": "ÔÉ¨ {ifname}: {ipaddr}/{cidr}", // Icon: ethernet
        "format-disconnected": "‚ö† Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}",
        "on-click": "kitty -e 'nmtui'",
    },

    "network#vpn": {
        "interface": "tun0",
        "format": "ÔÄí {essid} ({signalStrength}%)",
        "format-disconnected": "‚ö† Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
    },

    "sway/mode": {
        "format": "{}",
        "tooltip": false
    },

    "sway/window": {
        "format": "{}",
        "max-length": 120
    },

    "sway/workspaces": {
        "disable-scroll": true,
        "disable-markup" : false,
        "all-outputs": true,
        "format": " {icon} ",
        //"format":"{icon}",
        "format-icons": {
            "1": "‚ô†",
            "2": "‚ô•",
            "3": "‚ô¶",
            "4": "‚ô£",
            "5": "‚ò£",
            "6": "‚ò¢",
            "7": "‚åò",
            "8": "‚å¨",
        }
    },

    "pulseaudio": {
      // "scroll-step": 1, // %, can be a float
      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
      "format-bluetooth-muted": "Ôë¶ {format_source}",
      "format-muted": "Ôë¶ {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "headphone": "ÔÄ•",
        "hands-free": "Ôñê",
        "headset": "üéß",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-click": "kitty alsamixer"

    },

    "custom/weather": {
        "exec": "~/.config/waybar/scripts/weather.sh",
        "format": "{text} {icon}",
        "return-type": "json",
        "interval": 600,
        "tooltip-format": "{tooltip}"
    },

    "tray": {
        "icon-size": 18,
        "spacing":5,
     },

    "backlight#icon": {
        "format": "{icon}",
        "format-icons": ["ÔÜÖ"],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },

    "backlight#value" :{
         "format": "{percent}%",
         "on-scroll-down": "brightnessctl -c backlight set 1%-",
         "on-scroll-up": "brightnessctl -c backlight set +1%"
    },

    "custom/firefox": {
        "format": "ÓùÖ ",
        "on-click": "exec firefox", //choose a browser
        "tooltip": false
    },

    "custom/terminal": {
        "format": "ÔÑ† ",
        "on-click": "exec kitty", //choose a terminal
        "tooltip": false
    },

    "custom/files": {
        "format": "Ôùä ",
        "on-click": "exec thunar", //choose a file manager
        "tooltip": false
    },

    "custom/launcher": {
        "format":"ÔÑµ",
        "on-click": "exec wofi -c ~/.config/wofi/config -I",
        "tooltip": false,
    },

    "custom/power": {
        "format":"‚èª",
        "on-click": "exec ~/.config/waybar/scripts/power-menu.sh",
        "tooltip": false,
    },

    "mpd": {
      "format": "{stateIcon} {artist} - {title}",
      "format-disconnected": "üé∂",
      "format-stopped": "‚ô™",
      "interval": 10,
      "consume-icons": {
        "on": "ÔÉÑ " // Icon shows only when "consume" is on
      },
      "random-icons": {
        "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ", // Icon grayed out when "random" is off
        "on": "ÔÅ¥ "
      },
      "repeat-icons": {
        "on": "ÔÄû "
      },
      "single-icons": {
        "on": "ÔÄû1 "
      },
      "state-icons": {
        "paused": "ÔÅå",
        "playing": "ÔÅã"
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)",
      "max-length": 60
    },

}
