                    :orientation "h"
                    :space-evenly false
                    :halign "fill"
                    (label
                      :halign "start"
                      :class "osettings-text"
                      :text "Enable blur"
                    )
                    (box)
                    (checkboxhyprctl
                      :value "${hyprjson.blur}"
                      :changevalue "decoration:blur"
                    )
                  )
                  (revealer
                    :reveal "${matches('appearance looks customization blur size blur strength',oquery)}"
                    :transition "slidedown"
                    :duration "200ms"
                    (box
