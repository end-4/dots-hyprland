                        :orientation "h"
                        :space-evenly false
                        :spacing 10
                        (label
                          :wrap true
                          :class "osettings-text-icon"
                          :text ""
                        )
                        (box
                          :orientation "v"
                          :space-evenly false
                          (centerbox
                            :orientation "h"
                            :space-evenly false
                            :style "min-width: 417px;"
                            (label
                              :halign "start"
                              :wrap true
                              :class "osettings-text"
                              :text "Volume"
