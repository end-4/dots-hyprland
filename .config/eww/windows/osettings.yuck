                (box
                  :space-evenly false
                  :orientation "v"
                  (box
                    :orientation "h"
                    :space-evenly false
                    :spacing 10
                    (label
                      :halign "start"
                      :class "osettings-section-icon"
                      :text ""
                    )
                    (label
